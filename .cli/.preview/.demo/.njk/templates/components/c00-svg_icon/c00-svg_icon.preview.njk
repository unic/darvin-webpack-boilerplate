{% extends "layouts/l00-preview/l00-preview.njk" %}

{% import "components/c00-svg_icon/c00-svg_icon.njk" as svgIcon %}

{% set variantName = "Sprite Overview" %}
{% set variantDescr = "Project Icons" %}

{% macro main() %}
  <div class="m-prev-flexgrid m-prev-icons">
    {% for name in sprite.icons %}
      <div class="m-prev-flexgrid__item">
        <a tabindex="0" class="m-prev-flexgrid__iconbox">
          {{ svgIcon.main(icon=name ) }}
          <input type="text" value='svgIcon.main(icon="{{name}}" )'>
        </a>
        <span>{{ name }}</span>
      </div>
    {% endfor %}
  </div>
{% endmacro %}

{% block preview %}
  {{ main() }}
{% endblock %}
